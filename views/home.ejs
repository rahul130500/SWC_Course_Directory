<%- include("./partials/header.ejs") %>
    <div class="pt-24 w-auto h-screen">
      
      <div class="container flex  flex-col md:flex-row items-center justify-center space-x-36">
        <!--Left Col-->
        <div class="flex flex-col w-full md:w-2/5 items-start text-center">
            <% if(user){ %>
              <div>
                <h1 class="text-5xl font-bold leading-tight">
                Welcome <br><%= user.username %>
              </h1>
              <button  class="mx-auto lg:mx-40 hover:underline bg-white text-gray-800 font-bold rounded-full my-4 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out">
                Start Learning
              </button></div><% }else{ %><div>
                <h1 class="my-4 text-5xl font-bold leading-tight">
                    Welcome to<br> SWC Course Directory.
                  </h1>
              <p class="leading-tight text-2xl mb-8">
                Your one-stop platform to all academic courses of IIT Guwahati including 
videos, study material, assignments as well as solving queries.  
              </p>
              <button onclick="openModal()" class="mx-auto lg:mx-40 hover:underline bg-white text-gray-800 font-bold rounded-full my-4 py-4 px-8 shadow-lg focus:outline-none focus:shadow-outline transform transition hover:scale-105 duration-300 ease-in-out">
                Sign Up for free
              </button></div>
              <% } %> 
        </div>
        <div class="  py-6 text-center">
          <%- include("./partials/homecarousel.ejs") %>
        </div>
        </div>
        
      
    </div>
    <%- include("./partials/carousel.ejs") %>
    <%- include("./partials/footer.ejs") %>
    
