<%- include("../partials/header.ejs") %> 
<main class="w-full flex-grow p-6">
<!-- <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script> -->


<h1 class="text-3xl text-black pb-6"><%= courses_data.course_id %> - <%= courses_data.course_name %></h1>
<div class="mt-6">
    <a class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" href="/coursedirectory/admin/<%= courses_data.course_id %>/lectures/add">Add Lectures</a>

    <form style="float: right;" action="/coursedirectory/admin/<%= courses_data.course_id %>/lectures" method="POST">
        <input type="text" name="lectureSearch" placeholder="Search ... ">
        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded" type="submit"> Submit
        </button>
    </form>

</div>
<div class="w-auto mt-6 overflow-auto">
    <div class="bg-white">
        <table class="min-w-full bg-white">
            <thead class="bg-gray-800 text-white">
                <tr>
                    <th class="text-left py-3 px-4 uppercase font-semibold text-sm">Lecture No.</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Lecture Name</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">View</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Edit</th>
                    <th class="w-1/3 text-left py-3 px-4 uppercase font-semibold text-sm">Delete</th>
                </tr>
            </thead>
            <tbody class="text-gray-700" id="myMenu">
                <%lectures.forEach((lecture,i)=>{ if(i%2){%>
                    <tr class="bg-gray-200">
                <%}else{%>
                    <tr>
                <%}%>
                <td class="text-left py-3 px-4"><%= lecture.number %></td>
                <td class="w-1/3 text-left py-3 px-4"><%= lecture.name %></td>
                <td class="w-1/3 text-left py-3 px-4"><a href="/coursedirectory/admin/<%= courses_data.course_id %>/lectures/pdf/<%=lecture._id %>" target="_blank">View</a></td>
                <td class="w-1/3 text-left py-3 px-4"><a href="/coursedirectory/admin/<%= courses_data.course_id %>/lectures/<%=lecture._id %>">Edit</a></td>
                <td class="w-1/3 text-left py-3 px-4"><form action="/coursedirectory/admin/<%= courses_data.course_id %>/lectures/<%=lecture._id %>?_method=DELETE" method="POST"> <button type="submit">DELETE</button> </form></td>
                </tr>
            <% })%>       
            </tbody>
        </table>
    </div>
</div>

  
</main>

<%- include("../partials/footer.ejs") %> 