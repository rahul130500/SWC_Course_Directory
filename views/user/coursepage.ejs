<%- include("./partials/header.ejs") %>
<% if(professor){ %>
<div class="md:flex md:space-x-28 md:ml-36 items-center pt-24">
    <div class="flex justify-center rounded-md box-border pointer-events-none border-8 border-white w-auto h-64 bg-white">
      <img style="width: 325px;height: 325px;" class=" object-contain rounded-sm" src="/coursedirectory/uploads/professorImages/<%= professor.imagepath %>" />
    </div>
    <div>
      <div class="font-bold text-2xl text-center md:text-left" style="color: #142661"><%=courses_data.professorName %></div>
      <div class="text-lg text-center md:text-left" style="color: #142661"><%= professor.post %>, Department of <%= professor.department %> Engineering</div>
      <div class="text-lg text-center md:text-left" style="color: #142661"><%= professor.area %></div>
      <div class="mt-12 font-bold text-2xl flex justify-center md:justify-between" style="color: #142661">Courses</div>
    </div>
  </div><% } %>
<div class="md:flex  items-center md:mx-36 justify-between pt-40 mb-20"><div class="font-bold text-3xl md:text-2xl flex justify-center mb-8 md:mb-0 concat" style="color: #142661">
	<%= courseid %> - <%= courses_data.course_name %>
</div>
<% if(!professor){ %>
	
<div class="flex justify-center"><a href="/coursedirectory/course/<%= courseid %>/professor">
	<button class="font-bold text-lg py-5 px-10 border-2 border-blue-900 rounded-md" style="color: #142661">Instructor - <%=courses_data.professorName %></button></a></div><% } %></div>
  <% if(videos.length>0){ %>
<div class="font-bold text-2xl md:ml-36 mb-2 text-center md:text-left md:mt-16" style="color: #142661">Videos</div>
<%- include("./partials/videoCarousel.ejs") %><% } %>
<% if(lectures.length>0){ %>
<div class="font-bold text-2xl md:ml-36 mb-2 text-center md:text-left md:mt-16" style="color: #142661">Lectures</div>
<%- include("./partials/lectureCarousel.ejs") %><% } %>
<% if(assignments.length>0){ %>
<div class="font-bold text-2xl md:ml-36 mb-2 text-center md:text-left md:mt-16" style="color: #142661">Assignments</div>
<%- include("./partials/assignmentCarousel.ejs") %><% } %>

<div class="mb-8 md:mb-16"></div>
<%- include("./partials/footer.ejs") %>